extends admin-layout


block jumbo-desc
    p User Details


block admin-content
    h3 #{user.username}
    table.table
        tr
            td Name
            td #{user.fname} #{user.lname}
        tr
            td Email
            td #{user.email}
        tr
            td Badge Number
            td #{user.badge}
        tr
            td Section / Unit
            td #{user.sectunit}
        tr
            td Rank / Title
            td #{user.ranktitle}
        tr
            td Role
            td #{user.roleName()}
        tr
            td Agency
            td #{agency.name}

    - var resource = "/admin/users/" + user.id
    a.btn.btn-default(href=resource + "/edit-details") Edit Account Details
    a.btn.btn-default(href=resource + "/reset-password") Reset Password
    if(currentAgency === agency.id)
      a.btn.btn-danger(href=resource + "/delete") Delete User
