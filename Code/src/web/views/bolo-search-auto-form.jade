
include ./includes/mixins.jade
extends ./layout.jade


block jumbo
    .jumbotron
        .container
            p Search BOLOs

block content
    include ./partials/global-alerts.jade

    include ./partials/bolo-options.jade

    form#create-bolo-form(action="/bolo/search" enctype="multipart/form-data" method="post")
        input( type="hidden" name="status" value="New" )

        div.text-danger.strong.h4 Search Theft - Auto

        +select_options( "agencyName", "Agency", agencies, true, "" )
        +select_options( "category", "Category", categoriesAuto, true, "" )
        //+input_text_static( "category", "Category", "", false, "THEFT - AUTO")
        +input_text( "vehicleYear", "Year", "e.g. 2016", false,  "" )
        +select_options( "vehicleMake", "Make", vehicles_makes, false, "" )
        +input_text( "vehicleModel", "Model", "", false,  "" )
        +input_text( "vehicleTrim", "Trim", "", false,  "" )
        +input_text( "vehicleColor", "Color", "", false, "" )
        +input_text( "vehicleLicensePlate", "License Plate", "", false, "" )
        +input_text( "vehicleIdNumber", "Vehicle Identification Number (VIN)", "", false,  "" )

        +input_text( "wildcard", "Wildcard Search", "", false, "" )
        +check_box("matchFields","Match Fields",true)
        .form-group
            button.btn.btn-primary( type="submit" value="save") Search
