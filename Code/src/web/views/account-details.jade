extends ./account-layout.jade
include ./includes/mixins.jade


block styles
    link(href="/css/vendor/callouts.css" rel="stylesheet")


block jumbo-desc
    p Account Management: Your Account Details


block account-content
    h3 #{user.username}
    table.table
        tr
            td Name
            td #{user.fname} #{user.lname}
        tr
            td Email
            td #{user.email}
        tr
            td Badge Number
            td #{user.badge}
        tr
            td Section / Unit
            td #{user.sectunit}
        tr
            td Rank / Title
            td #{user.ranktitle}
        tr
            td Role
            td #{user.roleName()}
        tr
            td Agency
            td #{agency.name}

    if ( ! /root/i.test( user.roleName() ) )
        p.strong(style='color:red;') Please contact your Agency administrator to
            | make changes to your account details.
    else
        a( href='/admin/users/' + user.id +'/edit-details' ) Update Details
